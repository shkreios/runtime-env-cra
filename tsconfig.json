{
  "exclude": ["examples", "coverage-report", "tests", "node_modules"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "rootDir": "src",

    "lib": ["esnext"],

    "outDir": "lib",

    "strict": true,
    "noImplicitAny": true,

    "esModuleInterop": true,

    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
